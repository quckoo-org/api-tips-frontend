{
  "name": "tips-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack ",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky ",
    "proto:gen": "rimraf src/shared/proto && proto-gen.sh",
    "build:proto": "rimraf src/shared/proto && mkdirp src/shared/proto && globstar -- grpc_tools_node_protoc --experimental_allow_proto3_optional --ts_proto_out=./src/shared/proto --ts_proto_opt=useExactTypes=false,outputTypeRegistry=false,outputServices=generic-definitions,outputServices=nice-grpc,stringEnums=true,oneof=unions-value,esModuleInterop=true --descriptor_set_out=./src/shared/proto/protoset.bin --include_imports -I ./proto \"./@(proto_deps|proto)/**/*.proto\"",
    "start:local": "cd envoy &&  docker compose up -d && cd .. && next dev -p 4001 --turbopack"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.8",
    "@mantine/core": "^7.16.2",
    "@mantine/dates": "^7.16.2",
    "@mantine/hooks": "^7.16.2",
    "@mantine/notifications": "^7.16.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@tabler/icons-react": "^3.29.0",
    "@tanstack/react-query": "^5.61.4",
    "@tanstack/react-query-devtools": "^5.61.4",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "cookies-next": "^5.0.2",
    "countries-list": "^3.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.0.6",
    "i18n-iso-countries": "^7.13.0",
    "js-cookie": "^3.0.5",
    "js-sha256": "^0.11.0",
    "lodash.isempty": "^4.4.0",
    "lucide-react": "^0.473.0",
    "mantine-react-table": "^2.0.0-beta.8",
    "memoize-one": "^6.0.0",
    "mobx": "^6.13.5",
    "mobx-react-lite": "^4.1.0",
    "negotiator": "^1.0.0",
    "next": "15.0.3",
    "nice-grpc": "^2.1.10",
    "nice-grpc-client-middleware-retry": "^3.1.9",
    "nice-grpc-web": "^3.3.5",
    "pino": "^9.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.53.2",
    "react-hot-toast": "^2.4.1",
    "react-simple-captcha": "^9.3.1",
    "server-only": "^0.0.1",
    "use-memo-one": "^1.1.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "-": "^0.0.1",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/js-cookie": "^3",
    "@types/lodash.isempty": "^4",
    "@types/negotiator": "^0.6.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "glob": "^11.0.0",
    "globstar": "^1.0.0",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "mkdirp": "^3.0.1",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "ts-proto": "^2.3.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --max-warnings 0 --format stylish --fix",
      "prettier --write"
    ],
    "**/*.{ts,tsx,js,yml,yaml,json,md,ice}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=22.0.0"
  }
}
